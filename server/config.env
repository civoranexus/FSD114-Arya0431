# Environment Configuration for EduVillage Backend

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/eduvillage
# For MongoDB Atlas, use:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/eduvillage?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=eduvillage_jwt_secret_key_change_this_in_production_123456789
JWT_EXPIRE=30d

# CORS Configuration
CLIENT_URL=http://localhost:3000

# Email Configuration (for future features)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Cloud Storage (for future file uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
